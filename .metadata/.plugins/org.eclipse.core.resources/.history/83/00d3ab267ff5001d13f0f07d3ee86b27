package com.FileHandling;

import java.io.IOException;
import java.io.File;
import java.io.FileWriter;

public class FirstNotepad {
	 public static void main(String[] args) throws IOException
	    {
	      	File f = new File("F:/Training/javaAWT/src/com/FileHandling/FirstFile.txt");
	      	if(f.exists()) {
	      		System.out.println("File already exist..!! Hence deleting the file");
	      		f.delete();
	      	}else
	      	{
	      		try {
	      			f.createNewFile();
	      			f.canWrite();
	      			FileWriter fw = new FileWriter(f);
	      			fw.write("I am first statement", 0, 80);
	      			f.canRead();
	      			String filecontent = fw.toString();
	      			System.out.println(filecontent);
	      			System.out.println("File created successfully");
	      		}
	      		catch(IOException e) {
	      			e.printStackTrace();
	      		}
	      	}	      	
	    }
}